FROM docker.appdirect.tools/ci/ad-cypress:latest
# Using "latest" here since the ad-cypress-lib should be working fine with
# the latest version of ad-cypress docker image.

WORKDIR /ad-cypress
COPY --chown=node:node . /ad-cypress/

RUN npm ci
RUN npm uninstall ad-cypress-lib

ENTRYPOINT ["npm", "run"]
CMD ["test"]
